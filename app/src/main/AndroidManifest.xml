<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jackknife">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.TestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BitmapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.BottomMenuActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.BitmapActivity" />
        <activity
            android:name=".ui.TipsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ExtrasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.BugsKillerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.RequestPermissionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.IntroduceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MenuListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.lwh.jackknife.TaskStackGlobalConfig"
            android:value="GlobalConfig" />
        <meta-data
            android:name="com.example.jackknife.lifecycle.ARouterGlobalConfig"
            android:value="GlobalConfig" />
    </application>

</manifest>